<div class="TopBar">
	<img class ="image"src ="../images/LogoWhite.png"/>
	<br />
	<h1 class="TopBarInterior">Listing types of incidents<hr /></h1><br />
</div>

<table id="mciTable">
  <tr>
    <th class="date">Name</th>
    <th class="open"></th>
    <th class="open"></th>
  </tr>

<% @incident_types.each_with_index do |incident_type, i| %>
	<% if i%2 != 0 %>
		<tr id ="even">
	<%else %>
		<tr>
	<% end%>
    <td><%= incident_type.name %></td>
    <td><%= button_to 'Edit', edit_incident_type_path(incident_type), {:method => "get"}  %></td>
    <td><%= button_to 'Delete', incident_type, :confirm => 'Are you sure?', :method => :delete  %></td>
  </tr>
<% end %>
</table>

<br />

<div class="footerwrap">
	<br />
	<hr />
	<%= button_to 'Add a type of Incident', new_incident_type_path, {:method => "get", :class => "LongButton"}%>
	<br />
</div>

