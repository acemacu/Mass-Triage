<div id="newMCIdiv">
<%= form_for(@incident) do |f| %>
  <% if @incident.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@incident.errors.count, "error") %> prohibited this incident from being saved:</h2>

      <ul>
      <% @incident.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= f.hidden_field :date %>

  </div>
  <div class="field">
    <%= f.label "Date: " << @incident.date.strftime("%A, %B  %d, %Y - %I:%M:%S %p") %><br />
    
    <br /> <br />
  </div>
  	<div class="fieldNewMCI">
    <%= f.label "Address: " %>
    <%= f.text_field :location, :size => 90 %>
  	</div>
	<br />
	<div class="fieldNewMCI">
	    <%= f.label "Longitude: " %>
	    <%= f.text_field :longitude, :size => 23 %>
	    <%= f.label "Latitude: " %>
	    <%= f.text_field :latitude, :size => 23 %>
	</div>
	<br />
	<div class="fieldNewMCI">
    <%= f.label "Incident Type: " %>
	<%= f.select :incident_type, [['Motor Vehicle Collision', 'Motor Vehicle Collision'],['Building Fire', 'Building Fire'], ['Harmful Material Release', 'Harmful Material Release']] %>
  </div>
	
	<br />
	<div id="alignRight">
    <%= f.submit%>
	</div>
<% end %>
	<%= button_to 'Back', incidents_path, {:method=>"get"} %>
</div>
