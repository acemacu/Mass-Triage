<div class="centerEverythingContainterNoBorder">
	<%= form_for(@incident) do |f| %>
	<h1>Initial patients count</h1>
	<%= submit_tag "-5", :type=> 'button', :class => 'minus5Patient'%>
	<%= submit_tag "-1", :type=> 'button', :class => 'minus1Patient'%>
	<%= f.text_field :est_patient_count, :value => '0', :id => 'fieldPatient' %>
	<%= submit_tag "+1", :type=> 'button', :class => 'plus1Patient'%>
	<%= submit_tag "+5", :type=> 'button', :class => 'plus5Patient'%>
	<br /><br /><br />
	<h1>Request ambulances</h1>
	<%= submit_tag "-5", :type=> 'button'%>
	<%= submit_tag "-1", :type=> 'button'%>
	<%= f.text_field :requested_amb_count, :value => '0' %>
	<%= submit_tag "+1", :type=> 'button'%>
	<%= submit_tag "+5", :type=> 'button'%>
	<br /><br /><br />
	
	<%= f.submit "BEGIN TRIAGE"%>
	<% end %>
	<br />
	<%= button_to 'BACK', incidents_path, {:method=>"get"} %>
	
</div>