/* Eliminate the patient by fading it out */
$('#ambulance_<%= @ambulance.id %>').fadeOut();
/* Replace the count of patient */
$("#ambulance_count").html("<%= pluralize(Ambulance.count, 'Ambulance') %>");

$('.delete_ambulance').bind('ajax:success', function() {  
    $(this).closest('tr').fadeOut();  
});