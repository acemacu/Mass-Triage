<%= form_for [@incident, @patient] do |patient| %>
	<%= patient.label :numberOfTag, "TAG #" %>
	<%= patient.text_field :numberOfTag %>
	<%= patient.select :tagColor, [['Red','Red'],['Yellow','Yellow'],['Green','Green'],['Black','Black']] %>
	<%= patient.select :sex, [['Female','female'],['Male','Male']] %>
	<%= patient.label :age, "AGE" %>
	<%= patient.text_field :age %>
	<%= patient.select :ageType, [['Years','Years'],['Months','Months'], ['Days', 'Days']] %>
	<%= patient.label :complaint, "COMPLAINT"%>
	<%= patient.text_field :complaint%>
        <%= patient.label "Status" %>
        <%= patient.select :status, [['At Scene', 'At Scene'],['Transported','Transported'],['Missing/Left Scene','Missing/Left Scene']] %>
        <%= patient.label "Hospital" %>
        <%= patient.collection_select (:hospital_id,Hospital.all ,:id, :name) %>
        <%= patient.label "Ambulance" %>
        <%= patient.collection_select (:ambulance_id,@incident.ambulances.all ,:id, :idAmbulance) %>
	<%= patient.submit "ADD"%>
<% end %>
