<%= form_for [@incident, @patient] do |patient| %>
	<%= patient.label :numberOfTag, "TAG #" %>
	<%= patient.text_field :numberOfTag, :class => "ShortField" %>
	<%= patient.select :tagColor, [['Red','Red'],['Yellow','Yellow'],['Green','Green'],['Black','Black']], :class => "ShortField" %>
	<%= patient.select :sex, [['Female','Female'],['Male','Male']], :class => "ShortField" %>
	<%= patient.label :age, "AGE" %>
	<%= patient.text_field :age, :class => "ShortField" %>
	<%= patient.select :ageType, [['Years','Years'],['Months','Months'], ['Days', 'Days']], :class => "ShortField" %>
	<%= patient.label :complaint, "COMPLAINT"%>
	<%= patient.text_field :complaint, :class => "LongField"%>
<input type="button" id="extra_options_min" value="Extra" class ="RedShortButton" >
<div id="extra_options">
        <%= patient.label "Status" %>
        <%= patient.select :status, [['At Scene', 'At Scene'],['Transported','Transported'],['Missing/Left Scene','Missing/Left Scene']] %>
        <%= patient.label "Hospital" %>
        <%= patient.collection_select(:hospital_id, Hospital.all ,:id, :name) %>
        <%= patient.label "Ambulance" %>
        <%= patient.collection_select(:ambulance_id, @incident.ambulances.all, :id, :idAmbulance) %>
</div><%= patient.submit "ADD", :class => "ShortButton"%>
<% end %>
