/* Insert a notice between the last comment and the comment form */
$("#patient-notice").html('<div class="flash notice"><%= escape_javascript(flash.delete(:notice)) %></div>');

/* Replace the count of comments */
$("#patient_count").html("<%= pluralize(Patient.count, 'Patient') %>");

/* Add the new comment to the bottom of the comments list */
$("#patients").append("<%= escape_javascript(render(@patient)) %>");

/* Highlight the new comment */
$("#patient_<%= @patient.id %>").effect("highlight", {}, 3000);

/* Reset the comment form */
$("#new_patient")[0].reset();
