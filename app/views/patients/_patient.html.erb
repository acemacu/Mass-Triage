<%= div_for patient do %>
<% puts patient.hospital_id %>
<% hospitalname = Hospital.find(patient.hospital_id)%>

    <tr>
        <td><%= editable_field patient, :numberOfTag, {:update_url => incident_patient_path(@incident, patient)} %></td>
        <td><%= editable_field patient, :tagColor, :type => 'select', :submit => 'OK', :update_url => incident_patient_path(@incident, patient), :data => {'Green', 'Green', 'Black', 'Black', 'Yellow', 'Yellow', 'Red', 'Red'}%></td>
        <td><%= editable_field patient, :sex, :type => 'select', :submit => 'OK', :data => {'Female', 'Female', 'Male', 'Male'}, :update_url => incident_patient_path(@incident, patient) %></td>
        <td><%= editable_field patient, :age, :update_url => incident_patient_path(@incident, patient) %></td>
        <td><%= editable_field patient, :ageType, :type => 'select', :submit => 'OK', :data => {'Years', 'Years', 'Months', 'Months', 'Days', 'Days'}, :update_url => incident_patient_path(@incident, patient) %></td>
        <td><%= editable_field patient, :complaint, :update_url => incident_patient_path(@incident, patient) %></td>
        <td><%= editable_field patient, :status, :type => 'select', :submit => 'OK', :data => {'At Scene', 'At Scene', 'Transported', 'Transported', 'Missing/Left Scene', 'Missing/Left Scene'}, :update_url => incident_patient_path(@incident, patient) %></td>
		
		<%= div_for hospitalname do %>
		<td><%= editable_field hospitalname, :name, :type => 'select', :submit => 'OK', :data => @stringHospitals, :update_url => incident_patient_path(@incident, patient) %></td>
		<% end %>
        <td><%= button_to "X", [@incident, patient], :method=>:delete, :class=>:destroy, :confirm=>"Are you sure?", :remote => true %></td>
		<% end %>
    </tr>

        
