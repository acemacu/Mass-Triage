$("#en_route_amb").text("EN ROUTE: 0");
$("#transported_amb").text("TRANSPORTED: 0");
$("#delayed_amb").text("DELAYED: 0");
$("#arrived_amb").text("ARRIVED: 0");
$("#staged_amb").text("STAGED: 0");

<% for ambulance in @ambulances %>
  <% if ambulance.status == "En Route" %>
    $("#en_route_amb").text("EN ROUTE: <%= ambulance.number %>");
  <% elsif ambulance.status == "Transported"  %>
    $("#transported_amb").text("TRANSPORTED: <%= ambulance.number %>");
  <% elsif ambulance.status == "Delayed"  %>
    $("#delayed_amb").text("DELAYED: <%= ambulance.number %>");
  <% elsif ambulance.status == "Arrived"  %>
    $("#arrived_amb").text("ARRIVED: <%= ambulance.number %>");
  <% elsif ambulance.status == "Staged"  %>
    $("#staged_amb").text("STAGED: <%= ambulance.number %>");
  <% end %>
<% end %>

<% if @patients.count > 0 %>

  $("#tagged").text("TAGGED: <%= @general.count %>");
  $("#red_triage").text("0");
  $("#yellow_triage").text("0");
  $("#green_triage").text("0");
  $("#black_triage").text("0");

  <% for triage in @triage %>
    <% if triage.tagColor == "Red" %>
      $("#red_triage").text("<%= triage.number %>");
    <% elsif triage.tagColor == "Yellow"  %>
      $("#yellow_triage").text("<%= triage.number %>");
    <% elsif triage.tagColor == "Green"  %>
      $("#green_triage").text("<%= triage.number %>");
    <% elsif triage.tagColor == "Black"  %>
      $("#black_triage").text("<%= triage.number %>");
    <% end %>
  <% end %>

  <% for patient in @patients %>
    $("#tag_<%=  patient.id %>").text("<%=  patient.numberOfTag %>");
    $("#age_<%=  patient.id %>").text("<%=  patient.age %>");
    $("#complaint_<%=  patient.id %>").text("<%=  patient.complaint %>");
  <% end %>

<% end %>
  
